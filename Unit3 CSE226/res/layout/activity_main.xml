<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/section1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/google_map_img" />

        <RelativeLayout
            android:id="@+id/overlay1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8032CD32">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hide Overlay 1"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/section2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/music_wallpaper" />

        <RelativeLayout
            android:id="@+id/overlay2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FF0000">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hide Overlay 2"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/section3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/chat_wallpaper" />

        <RelativeLayout
            android:id="@+id/overlay3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFF00">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hide Overlay 3"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </FrameLayout>

</LinearLayout>
