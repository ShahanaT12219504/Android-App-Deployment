<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/img_2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:text="Sign Up"
            android:textSize="28sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:text="Create your account, to launch our app."
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_gravity="left"
            android:textSize="15sp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/nameR"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Your Full Name"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_box"
            android:padding="12dp"
            android:textColorHint="#999999"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_gravity="left"
            android:textSize="15sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/emailR"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="name@example.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_box"
            android:padding="12dp"
            android:textColorHint="#999999"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_gravity="left"
            android:textSize="15sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/pwdR"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="min. 8 characters"
            android:inputType="textPassword"
            android:background="@drawable/rounded_box"
            android:padding="12dp"
            android:textColorHint="#999999"
            android:textColor="#000000"/>

        <CheckBox
            android:id="@+id/termsCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I accept the policy &amp; terms"
            android:layout_gravity="left"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/regBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FFCC66"
            android:text="Sign Up"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or Sign up with"
            android:textColor="#000000"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView android:src="@drawable/img_4" android:layout_width="32dp" android:layout_height="32dp" android:layout_margin="8dp"/>
            <ImageView android:src="@drawable/img_3" android:layout_width="32dp" android:layout_height="32dp" android:layout_margin="8dp"/>
            <ImageView android:src="@drawable/img_5" android:layout_width="32dp" android:layout_height="32dp" android:layout_margin="8dp"/>
            <ImageView android:src="@drawable/img_6" android:layout_width="32dp" android:layout_height="32dp" android:layout_margin="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/backToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:textSize="14sp"/>
    </LinearLayout>
</ScrollView>
