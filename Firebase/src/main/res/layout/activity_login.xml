<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_2"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:text="Login"
            android:textSize="28sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:text="Sign in with your credentials."
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="15sp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="name@example.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_box"
            android:padding="12dp"
            android:textColorHint="#999999"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="15sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:background="@drawable/rounded_box"
            android:padding="12dp"
            android:textColorHint="#999999"
            android:textColor="#000000"/>

        <CheckBox
            android:id="@+id/keepLoggedIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep me logged in"
            android:layout_gravity="left"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:backgroundTint="#FFCC66"
            android:textColor="#000000"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView android:src="@drawable/img_4" android:layout_width="32dp" android:layout_height="32dp" android:layout_margin="8dp"/>
            <ImageView android:src="@drawable/img_3" android:layout_width="32dp" android:layout_height="32dp" android:layout_margin="8dp"/>
            <ImageView android:src="@drawable/img_5" android:layout_width="32dp" android:layout_height="32dp" android:layout_margin="8dp"/>
            <ImageView android:src="@drawable/img_6" android:layout_width="32dp" android:layout_height="32dp" android:layout_margin="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/forgotPwdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textColor="#000000"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/registerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Sign up"
            android:textColor="#000000"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
